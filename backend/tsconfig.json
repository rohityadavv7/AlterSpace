{
  "compilerOptions": {
    "target": "ES2020",                     // Modern JS target
    "module": "CommonJS",                   // Node.js module system
    "rootDir": "./src",                     // Your source files root
    "outDir": "./dist",                     // Compiled output folder
    "strict": true,                         // Enable all strict type-checking options
    "esModuleInterop": true,                // For import compatibility
    "skipLibCheck": true,                   // Skip type checks on all declaration files (improves speed)
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "node",             // Resolves modules the Node.js way
    "resolveJsonModule": true,              // Allows importing JSON files
    "types": ["node", "express"],           // Include Node and Express types globally
    "noImplicitAny": true
  },
  "include": ["src", "environment.d.ts"],   // Include source files and your custom typings
  "exclude": ["node_modules", "dist"]       // Exclude node_modules and compiled files
}
